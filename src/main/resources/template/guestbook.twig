<!DOCTYPE html>

<html lang="en">

<head>

    <title>Guestbook</title>

    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

</head>

<body>

<header>

    <h1>Guestbook</h1>

</header>

<section id="primary-content">

    <label for="new-message" class="write-us"></label>

    <section class="messages">

        {% for message in messages %}
            <div class="message-container">
                <span class="time">{{ message.getFormattedDate }}</span>
                <br/>
                <span class="name">{{ message.getName }}</span>
                <p class="message">{{ message.getMessage }}</p>
                <br/>
            </div>
        {% endfor %}

    </section>

    <section id="send-message-form">

        <div id="textarea-container">
            <form class="form-container" method="POST">
                <input name="name" type="text" placeholder="Name" id="name" maxlength="50" required="required"/>
                <br/>
                <textarea name="message" id="new-message" rows="10" cols="50"
                          placeholder="Write a message..." required="required"></textarea>
                <label for="name"></label>
                <br/>
                <button id="send-message" type="submit">SUBMIT<i class="far fa-paper-plane"></i></button>
            </form>
        </div>

    </section>

</section>

</body>

</html>